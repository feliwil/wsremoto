package repeticao;

import javax.swing.JOptionPane;

public class DesafioDO {

	public static void main(String[] args) {
		int jogador1 = Integer.parseInt(JOptionPane.showInputDialog("JOGADOR 1: Digite o numero:"));
		int jogador2 =0;
		int tentativas= 0;
		do {
			jogador2 = Integer.parseInt(JOptionPane.showInputDialog("JOGADOR 2: Tente adivinhar o número inserido pelo jogador 1:" ));
			tentativas= tentativas + 1;
			if (jogador1!=jogador2) {
				if (jogador1>jogador2){
					jogador2= Integer.parseInt(JOptionPane.showInputDialog("DICA: Tente um número mais alto"));
				}else {
					jogador2= Integer.parseInt(JOptionPane.showInputDialog("DICA: Tente um número mais baixo"));
				}
			} else {

			}while (jogador1 != jogador2);
			System.out.println("Parabens você acertou em " +tentativas + " tentativas. O número digitado foi: " + jogador2);
		}

	}

}
